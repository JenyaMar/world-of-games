pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build and Push to Dockerhub') {
            steps {
               withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh "docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD"
                    sh "docker build -t jenmar/flaskapp:latest ./WorldOfGames/"
                    sh "docker push jenmar/flaskapp:latest"
               }
            }
        }
        stage('Docker run') {
            steps {
                sh 'docker run -d -p 4444:4444 --name my-chrome selenium/standalone-chrome'
                sh 'docker run --pull=always -d -p 5000:5000 --name my-test-app jenmar/flaskapp:latest'
            }
        }
        stage('Run tests') {
            steps {
                sh 'python3 ./WorldOfGames/Tests/e2e.py'
            }
        }
    }
    post {
        always {
            sh "docker stop my-test-app"
            sh "docker rm my-test-app"
            sh "docker stop my-chrome"
            sh "docker rm my-chrome"
        }
    }
}
