pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build , Push and Run docker') {
            steps {
               withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh "docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD"
                    sh "./WorldOfGames/docker-compose build"
                    sh "./WorldOfGames/docker-compose push jenmar/flaskapp:latest"
                    sh "./WorldOfGames/docker-compose up -d"
               }
            }
        }
        stage('Run tests') {
            steps {
                sh 'python3 ./WorldOfGames/Tests/e2e.py'
            }
        }
    }
    post {
        always {
            sh "./WorldOfGames/docker-compose down"
        }
    }
}