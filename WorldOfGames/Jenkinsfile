pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build and Push to Dockerhub') {
            steps {
                sh 'docker build ./WorldOfGames/ -t jenmar/flaskapp:v1'
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    // Build and push the Docker image
                    docker.build('jenmar/flaskapp:latest').push()
                }
            }
        }
        stage('Run docker build') {
            steps {
                sh 'docker run -d -p 8777 -v $(pwd)/Scores.txt:/root/app/Scores.txt --name my-flask-test jenmar/flaskapp:latest'
            }
        }
        stage('Run tests') {
            steps {
                sh 'python3 ./WorldOfGames/Tests/e2e.py'
            }
        }
    }
    post {
        always {
            sh "docker stop my-flask-test"
            sh "docker stop chrome-driver"
            sh "docker rm my-flask-test"
            sh "docker rm chrome-driver"
        }
    }
}